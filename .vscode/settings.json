{
  "clangd.arguments": [
    "--background-index",
    "--clang-tidy",
    "--completion-style=detailed",
    "--header-insertion=iwyu",
    "--header-insertion-decorators"
  ],
  "clangd.path": "clangd",
  "clangd.onConfigChanged": "restart",
  "clangd.detectExtensionConflicts": true,
  "clangd.fallbackFlags": [
    "-std=c++20"
  ],
  "C_Cpp.intelliSenseEngine": "disabled",
  "files.associations": {
    "*.h": "cpp",
    "*.hpp": "cpp"
  }
}
